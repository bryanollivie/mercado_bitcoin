<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="90dp">

    <!-- Logo -->
    <ImageView
        android:id="@+id/exchangeLogo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        app:layout_constraintBottom_toTopOf="@+id/divider"
        app:layout_constraintEnd_toStartOf="@+id/spotVolume"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Nome -->
    <TextView
        android:id="@+id/exchangeName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Nome da Exchange"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/exchangeLogo"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Volume -->
    <TextView
        android:id="@+id/spotVolume"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/exchangeName"
        app:layout_constraintTop_toBottomOf="@id/exchangeName"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Volume: 123M USD" />

    <!-- Data -->
    <TextView
        android:id="@+id/dateLaunched"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/exchangeName"
        app:layout_constraintTop_toBottomOf="@id/spotVolume"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="LanÃ§ada: 2020-01-01" />

    <!-- Divider -->
    <View
        android:id="@+id/divider"
        android:layout_width="411dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dateLaunched" />

</androidx.constraintlayout.widget.ConstraintLayout>
